@model List<Categories>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="class-primary">
                List Categories
            </h2>
        </div>
        <div class="col col-6 text-end">
            <a asp-controller="Categories" asp-action="Create"  class="btn btn-primary">
            <i class="bi bi-bag-plus-fill"></i> Ajouter Categories
            </a>
        </div>

    </div>
    

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Order
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-50 btn-group text-center" role="group">
                        <a asp-controller="Categories" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Modifier
                        </a>
                    </div>
                    <div class="w-50 btn-group text-center" role="group">
                        <a asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Supprimer
                        </a>
                     </div>
                </td>
            </tr>
        }
    </tbody>


</table>
</div>