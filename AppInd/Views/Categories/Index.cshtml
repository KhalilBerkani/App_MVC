@model List<Categories>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="class-primary">
                List Categories
            </h2>
        </div>
        <div class="col col-6 text-end">
            <a asp-controller="Categories" asp-action="Create"  class="btn btn-primary">
            <i class="bi bi-bag-plus-fill"></i> Ajouter Categories
            </a>
        </div>

    </div>
    

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Order
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
            </tr>
        }
    </tbody>


</table>
</div>